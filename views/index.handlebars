<h1>Burgers</h1>

<h2>Devoured = False</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured = True</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add Burger</h2>
<form class="create-form">

  <div class="form-group">
    {{!-- <label for="burgerName">Burger name:</label> --}}
    <input type="text" id="burgerName" name="name" devoured="false">
  </div>
  <button type="submit">Add Burger</button>
</form>
