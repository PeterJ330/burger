<h1 class="title">Burgers</h1>

<div class="row">
  <div class="col-md-4">
    <div class="readyToEatContainer">
      <h2 class="readyToEat">Ready To Be Eaten</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="col-md-4">
    <div class="eatenContainer">
      <h2 class="eaten">Burgers That Have Been Eaten</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="col-md-4">
    <div class="buttonGroup">
      <h2 class="addBurger">Add Burger</h2>
      <form class="create-form">

        <div class="form-group">
          {{!-- <label for="burgerName">Burger name:</label> --}}
          <input type="text" id="burgerName" name="name" devoured="false">
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>